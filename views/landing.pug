extends layout

block content
  h1= title
  p Welcome to #{title}
  p #{username} is currently logged in.
  form(action="/", method="POST")
    input(name="lead_email",type="email", placeholder="Enter your email address")
    //- input(name="first_name",type="text", placeholder="Enter your first name")
    //- input(name="last_name",type="text", placeholder="Enter your last name")  
    button(type="submit") Submit
  if leads
      h1 Leads
      for lead in leads
        p
          span #{lead.email}
          |
          a(href="/lead/" + lead.id) Details
          |
          button(onclick=`deleteLead('${lead.id}')`) Delete
          
  script(src='https://code.jquery.com/jquery-3.2.1.min.js')
  script(src='/javascripts/lead.js')
  img(src='https://pcdn.columbian.com/wp-content/uploads/2017/01/162399-01-13-kids-shoveli3.jpg')
